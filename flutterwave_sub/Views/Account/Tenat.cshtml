@model IEnumerable<flutterwave_sub.Models.ServiceViewModel>

@{
    ViewBag.Title = "Tenat";
}

<h2>Tenat</h2>

@Html.Partial("_alerts")

@if (Model.Count() == 0)
{
    <h3>No Service</h3>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.interval)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.active)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    &#x20a6 @Html.DisplayFor(modelItem => item.amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.interval)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.active)
                </td>
                <td>
                    @if (!item.active)
                    {
                        @Html.ActionLink("Subcribe", "Subscribe", new { sId = item.Id })
                    }
                    else
                    {
                        @: Unsubscribe
                    }
                </td>
            </tr>
        }

    </table>
}
