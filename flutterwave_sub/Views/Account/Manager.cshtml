@model IEnumerable<flutterwave_sub.Models.Service>

@{
    ViewBag.Title = "Manager";
    int? mid = (int)ViewBag.ManagerId;
    int count = 0;
}

<h2>Manager Services</h2>
@Html.Partial("_alerts")
<p>
    @Html.ActionLink("Create New Service", "Addservice", new { mid = mid })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("No")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Interval)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @(++count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                &#x20a6 @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interval)
            </td>
            <td>
                @Html.ActionLink("Details", "Service", new { sid = item.Id })
            </td>
        </tr>
    }

</table>
