@model string

@{
    ViewBag.Title = "Subscribe_otp";
}

<h2>Subscribe_otp</h2>

@Html.Partial("_alerts")


@using (Html.BeginForm("Subscribe_otp", "account", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Enter OTP</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label for="pin" class="control-label col-md-2">OTP</label>
        <div class="col-md-10">
            <input name="otp" type="password" id="otp" class="form-control" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
